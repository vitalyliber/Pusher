<turbo-frame id="stats">
  <div class="container mx-auto p-4 mb-10">
    <h1 class="text-xl font-bold text-center mb-6">User Activity Statistics</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Daily -->
      <div class="bg-white shadow-lg rounded-lg p-6 text-center">
        <h2 class="text-md font-semibold text-gray-700">Last Day</h2>
        <p class="text-xl font-bold text-blue-600 mt-2"><%= number_with_delimiter(@daily_count) %></p>
      </div>
      <!-- Weekly -->
      <div class="bg-white shadow-lg rounded-lg p-6 text-center">
        <h2 class="text-md font-semibold text-gray-700">Last Week</h2>
        <p class="text-xl font-bold text-blue-600 mt-2"><%= number_with_delimiter(@weekly_count) %></p>
      </div>
      <!-- Monthly -->
      <div class="bg-white shadow-lg rounded-lg p-6 text-center">
        <h2 class="text-md font-semibold text-gray-700">Last Month</h2>
        <p class="text-xl font-bold text-blue-600 mt-2"><%= number_with_delimiter(@monthly_count) %></p>
      </div>
    </div>
  </div>
</turbo-frame>