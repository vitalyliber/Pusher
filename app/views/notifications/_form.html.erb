<%= form_with url: notifications_path, method: :post, class: "space-y-6" do %>
  <input type="hidden" name="target" value="<%= @target %>">
  <div
    class="space-y-4"
    data-controller="json-input-persister"
    data-input-persister-key="notification_data"
  >
    <label class="font-semibold block">Data</label>
    <button class="btn btn-xs" data-action="click->json-input-persister#pasteJson">
      Paste
    </button>
    <button class="btn btn-xs" data-action="click->json-input-persister#copyJson">
      Copy
    </button>
    <div data-json-input-persister-target="editor" class="w-full h-64"></div>
    <textarea
      data-json-input-persister-target="input"
      placeholder="Data"
      name="notification[data]"
      class="w-full px-4 py-3 rounded hidden"
    ></textarea>
  </div>
  <% if @target == "one" %>
    <div class="space-y-4" data-controller="mobile-device-search">
      <div class="flex items-center justify-start space-x-4">
        <label class="font-semibold block">External Key</label>
        <turbo-frame
          id="search_results"
          target="_top"
          data-mobile-device-search-target="frame"
        >
          <div
            class="loader border-t-transparent border-solid rounded-full animate-spin border-4 border-blue-500 size-4"
          ></div>
        </turbo-frame>
      </div>
      <input
        data-mobile-device-search-target="input"
        data-controller="input-persister"
        data-action="input->mobile-device-search#search input->input-persister#save"
        placeholder="External Key"
        class="w-full px-4 py-3 rounded"
        name="notification[external_key]"
        value=""
      />
      <div class="text-xs text-gray-500">
        Use only the Unique User Identifier. This field is not accept the push
        notification token.
      </div>
    </div>
  <% end %>
  <% if @target == "multiple" %>
    <div class="space-y-4">
      <label class="font-semibold block">Topic</label>
      <input
        data-controller="input-persister"
        data-action="input->input-persister#save"
        placeholder="Topic"
        class="w-full px-4 py-3 rounded"
        name="notification[topic]"
        value=""
      />
      <div class="text-xs text-gray-500">
        You will send messages to all users who subscribed to the topic.
      </div>
    </div>
  <% end %>
  <% if @result.blank? && @target.present? %>
    <button
      <% if @target == 'multiple' %>
        data-turbo-confirm="Are you sure?"
      <% end %>
      class="<%= class_names("btn", "btn-secondary": @target == "multiple", "btn-neutral": @target == "one") %>"
      type="submit"
    >
      <% if @target == "one" %>
        Send to one user
      <% end %>
      <% if @target == "multiple" %>
        Send to multiple users
      <% end %>
    </button>
  <% end %>
<% end %>
