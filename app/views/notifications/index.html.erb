<div class="container mx-auto px-6 lg:px-0">
  <div class="max-w-5xl mx-auto bg-gray-50 py-10 rounded-sm px-5">
    <% if mobile_access %>
      <turbo-frame src="<%= stats_mobile_devices_path %>" id="stats" target="_top">
        <div class="flex justify-center items-center mb-6">
          <div class="loader border-t-transparent border-solid rounded-full animate-spin border-4 border-blue-500 size-4"></div>
        </div>
      </turbo-frame>
      <div class="flex justify-center items-center space-x-4 mb-14">
        <%= link_to "One", root_path(target: "one"), class: class_names("w-24 btn", "btn-soft": @target.blank?, "btn-neutral": @target == "one") %>
        <%= link_to "Multiple", root_path(target: "multiple"), class: class_names("w-24 btn", "btn-soft": @target.blank?, "btn-secondary": @target == "multiple") %>
      </div>
      <%= render "form" %>
      <% if @result %>
        <h2 class="font-bold text-lg mb-4 mt-6">
          Server Response:
        </h2>
        <pre class="bg-white p-4 rounded text-sm">
          <code>
            <%= JSON.pretty_generate(@result).strip %>
          </code>
        </pre>
        <%= link_to "Clean", root_path(target: @target), class: "btn btn-success mt-6" %>
        <script>
          setTimeout(function() {
              window.scrollTo({
                      top: document.body.scrollHeight,
                      behavior: 'smooth'
              });
          }, 200);
        </script>
      <% end %>
    <% else %>
      <p class="text-center text-gray-500">
        Please log in to continue
      </p>
    <% end %>
  </div>
</div>
